<div class="mt-4">
  <h3>Chỉnh sửa thông tin sách</h3>

  <form class="mt-4" method="POST" action="/books/{{book._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên sách</label>
      <input
        type="text"
        class="form-control"
        value="{{book.name}}"
        id="name"
        name="name"
      />
    </div>

    <div class="form-group">
      <label for="description">Mô tả</label>
      <input
        type="text"
        class="form-control"
        value="{{book.description}}"
        id="description"
        name="description"
      />
    </div>

    <div class="form-group">
      <label for="price">Giá</label>
      <input
        type="text"
        class="form-control"
        value="{{book.price}}"
        id="price"
        name="price"
      />
    </div>

    <div class="form-group">
      <label for="page">Số trang</label>
      <input
        type="text"
        class="form-control"
        value="{{book.page}}"
        id="page"
        name="page"
      />
    </div>

    <div class="form-group">
      <label for="image">Link ảnh bìa của sách</label>
      <input
        type="text"
        class="form-control"
        value="{{book.image}}"
        id="image"
        name="image"
      />
    </div>

    <div class="form-group">
      <label for="author">Tác giả</label>
      <input
        type="text"
        class="form-control"
        value="{{book.author}}"
        id="author"
        name="author"
      />
    </div>

    <button type="submit" class="btn btn-primary">Xác nhận</button>
  </form>
</div>